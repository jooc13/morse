{
  "testEnvironment": "node",
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
  "testMatch": [
    "<rootDir>/tests/**/*.test.js",
    "<rootDir>/src/**/__tests__/**/*.js"
  ],
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/app.js",
    "!src/config/**",
    "!**/node_modules/**"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "html"],
  "testTimeout": 10000,
  "verbose": true
}